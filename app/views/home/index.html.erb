<body>

<!-- Таблиця для відображення флеш-карток -->
<div class="flashcards" style="position: relative;">
  <table class="table table-dark">
    <thead>
      <tr>
        <th scope="col">Term</th>
        <th scope="col">Translation</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <!-- ... -->
    <tbody>
      <% @flashcards.each do |flashcard| %>
        <tr>
          <td class="term"><strong>Term:</strong> <%= flashcard.term %></td>
          <td class="translation hidden"><strong>Translation:</strong> <%= flashcard.translation %></td>
          <td>
            <!-- Кнопки розміщені справа від кожного рядка таблиці -->
            <div class="button-container" style="position: absolute; top: 0; right: 0; margin-top: 20px;">
              <%= link_to 'Show', flashcard_path(flashcard, word: flashcard.term), class: 'btn btn-info' %>
              <%= link_to 'Edit', edit_flashcard_path(flashcard), class: 'btn btn-warning' %>
              <%= link_to 'Delete', flashcard, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
    <!-- ... -->
    
  </table>
</div>


<div class="button-container">
  <button id="flip" class="btn btn-primary">Flip</button>
  <button id="next" class="btn btn-success hidden">Next</button>
</div>

<script>
document.addEventListener('DOMContentLoaded', function () {
  var flashcardRows = document.querySelectorAll('.flashcards tbody tr');
  var currentIndex = 0;

  function showFlashcard(index) {
    flashcardRows.forEach(function (row, i) {
      row.style.display = i === index ? 'table-row' : 'none';
    });
  }

  showFlashcard(currentIndex);

  var flipButton = document.getElementById('flip');
  var nextButton = document.getElementById('next');

  flipButton.addEventListener('click', function () {
    console.log('currentIndex:', currentIndex);
    console.log('flashcardRows[currentIndex]:', flashcardRows[currentIndex]);

    var termElement = flashcardRows[currentIndex].querySelector('.term');
    var translationElement = flashcardRows[currentIndex].querySelector('.translation');

    if (termElement && translationElement) {
        var isFlipped = translationElement.classList.contains('hidden');

        if (isFlipped) {
            termElement.classList.remove('hidden');
            translationElement.classList.add('hidden');
            flipButton.innerHTML = 'Flip';
        } else {
            termElement.classList.add('hidden');
            // Виправлено, щоб отримати текст з .translation.hidden
            translationElement = flashcardRows[currentIndex].querySelector('.translation.hidden');
            translationElement.classList.remove('hidden');
            flipButton.innerHTML = 'Next';
        }

        nextButton.classList.remove('hidden');
    } else {
        console.error('Required elements not found in the current row.');
    }
});


  nextButton.addEventListener('click', function () {
    var currentRow = flashcardRows[currentIndex];

    if (currentRow) {
      currentRow.remove();

      if (currentIndex + 1 < flashcardRows.length) {
        currentIndex++;
        showFlashcard(currentIndex);
        nextButton.classList.add('hidden');
      } else {
        alert('You have completed all flashcards.');
        flipButton.classList.add('hidden');
        nextButton.classList.add('hidden');
      }
    } else {
      console.error('Current row not found.');
    }
  });
});

</script>

</body>

