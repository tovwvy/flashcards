<!-- app/views/flashcards/new.html.erb -->
<h1>Create Flashcard</h1>

<%= form_with(model: @flashcard, local: true) do |form| %>
  <% if @flashcard.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@flashcard.errors.count, "error") %> prohibited this flashcard from being saved:</h2>

      <ul>
        <% @flashcard.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :term %>
    <%= form.text_field :term %>
  </div>

  <div class="field">
    <%= form.label :translation %>
    <%= form.text_field :translation %>
  </div>

  <div class="field">
    <%= form.label :learning %>
    <%= form.check_box :learning %>
  </div>

  <div class="field">
    <%= form.label :word_id %>
    <%= form.collection_select :word_id, Word.all, :id, :word_en, prompt: "Select a word" %>
  </div>

  <div class="actions">
    <%= form.submit 'Create Flashcard' %>
  </div>
<% end %>
